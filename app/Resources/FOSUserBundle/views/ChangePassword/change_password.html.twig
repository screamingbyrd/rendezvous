{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container login rendezvous-container">
        <div class="col-sm4 col-md-4">

            <div class="login-register">

                <h3 class="title">{{ 'login.forgotPassword.new'|trans }}</h3>

                <p>{{ 'login.forgotPassword.validation'|trans }}</p>
            </div>

            <hr>

            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            {{ form_widget(form) }}
            <div>
                <input class="rendezvous-button login login-button" type="submit" value="{{ 'change_password.submit'|trans }}" />
            </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}