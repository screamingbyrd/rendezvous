        <div class="row">
            <div class="col-md-4">
                {{ form_label (form.wage, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.wage) }}
                {{ form_errors(form.wage) }}
            </div>
            <div class="col-md-4">
                {{ form_label (form.benefits, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.benefits) }}
                {{ form_errors(form.benefits) }}
            </div>
            <div class="col-md-4 col-sm-4">
                {{ form_label (form.link, null, { 'label_attr': {'class': 'label-form'} }) }}
                <span class="info-bubble" data-toggle="tooltip" data-placement="top" title="{{ 'offer.linkInfo'|trans }}"><i class="fas fa-info-circle"></i></span>
                {{ form_widget(form.link) }}
                {{ form_errors(form.link) }}
            </div>













            {#<div class="col-md-3" style="display: none;">#}
