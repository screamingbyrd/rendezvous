                {#{{ form_errors(form.image) }}#}
            {#</div>#}
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ form_widget(form.submit, { 'label': 'offer.submit','class': 'btn' }) }}
            </div>
        </div>
