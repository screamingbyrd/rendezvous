        }
        .closed-day-checkbox{
            margin-right: 10px !important;
        }
    </style>
    <script>
        $('.closed-day-checkbox').on('click', function () {

            if($(this).is(':checked')){
                $(this).parent().children('.time-day-container').hide();
                $(this).parent().children('.time-day-container').children('.input-time').removeAttr('required').val('');
            } else {
                $(this).parent().children('.time-day-container').show();
                $(this).parent().children('.time-day-container').children('.input-time').prop('required',true);
            }
        });
