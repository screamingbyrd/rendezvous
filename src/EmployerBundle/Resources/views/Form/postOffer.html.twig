{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Register - {{ parent() }}
{% endblock %}

{% block body %}

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>

    <script>
        jQuery(function($) {
            $( ".myDatePickerInput" ).datepicker();
        });
    </script>
    {%  if (app.user.roles is defined) and ('ROLE_EMPLOYER' in app.user.roles) %}
        <a href="{{ path('dashboard_employer') }}" class="btn btn-primary return-to-dashboard">{{ 'dashboard.employer.return' | trans }}</a>
    {% endif %}
    <div class="container post-offer jobnow-container">

        <h3 class="text-center post-offer">{{ 'header.employers.post'|trans }}</h3>

        {{ form_start(form, {'attr': {'class': 'form-vertical'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="row">
            <div class="col-md-4 col-sm-4">
                {{ form_label (form.title, null, { 'label_attr':
                    {'class': 'label-form'}
                 })  }}

                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="col-md-4 col-sm-4">
                {{ form_label (form.tag, null, { 'label_attr': {'class': 'label-form'}

                }) }}
                <span class="info-bubble" data-toggle="tooltip" data-placement="top" title="{{ 'offer.tagInfo'|trans }}"><i class="fas fa-info-circle"></i></span>
                {{ form_widget(form.tag) }}
                {{ form_errors(form.tag) }}
            </div>
            <div class="col-md-4 col-sm-4">
                {{ form_label (form.location, null, { 'label_attr': {'class': 'label-form'} }) }}
                <span class="info-bubble" data-toggle="tooltip" data-placement="top" title="{{ 'offer.locationInfo'|trans }}"><i class="fas fa-info-circle"></i></span>
                {{ form_widget(form.location) }}
                {{ form_errors(form.location) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                {{ form_label (form.description, null, { 'label_attr': {
                    'class': 'label-form'
                } }) }}
                <span class="info-bubble" data-toggle="tooltip" data-placement="top" title="{{ 'offer.descriptionInfo'|trans }}"><i class="fas fa-info-circle"></i></span>
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
        <br>

        <h4>{{ 'offer.option'|trans }}</h4>
        <div class="row">
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.contractType, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.contractType) }}
                {{ form_errors(form.contractType) }}
            </div>
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.experience, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.experience) }}
                {{ form_errors(form.experience) }}
            </div>
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.diploma, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.diploma) }}
                {{ form_errors(form.diploma) }}
            </div>
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.availableDate, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.availableDate) }}
                {{ form_errors(form.availableDate) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.wage, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.wage) }}
                {{ form_errors(form.wage) }}
            </div>
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.benefits, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.benefits) }}
                {{ form_errors(form.benefits) }}
            </div>
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.language, null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.language) }}
                {{ form_errors(form.language) }}
            </div>
            <div class="col-md-3 col-sm-3">
                {{ form_label (form.link, null, { 'label_attr': {'class': 'label-form'} }) }}
                <span class="info-bubble" data-toggle="tooltip" data-placement="top" title="{{ 'offer.linkInfo'|trans }}"><i class="fas fa-info-circle"></i></span>
                {{ form_widget(form.link) }}
                {{ form_errors(form.link) }}
            </div>
            <div class="col-md-3 col-sm-3" style="display: none;">
                {{ form_label (form.image,null, { 'label_attr': {'class': 'label-form'} }) }}
                {{ form_widget(form.image) }}
                {{ form_errors(form.image) }}
            </div>
        </div>


        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ form_widget(form.submit, { 'label': 'offer.submit','class': 'btn' }) }}
            </div>
        </div>


        </div>







        {# Génération automatique des champs pas encore écrits.
           Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
           et tous les champs cachés (type « hidden »). #}
        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}


    </div>

